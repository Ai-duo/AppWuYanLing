<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maincontainer"
    android:layout_width="128px"
    android:layout_height="196px"
    android:background="#000"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">
    <!--标题-->
    <TextView

        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center_horizontal|bottom"
        android:lineSpacingExtra="1px"
        android:text="乌岩岭监测站"
        android:textColor="#fff"
        android:textScaleX="1"
        android:textSize="20px" />


    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_marginLeft="4px"
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2"
        android:orientation="horizontal">


    </LinearLayout>
    <TextView
        android:layout_marginTop="1px"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:lineSpacingExtra="1px"

        android:textColor="#0f0"
        android:textSize="15px" />
    <com.kelin.add.kelinsite.add.MarqueeView
        android:id="@+id/weatherinfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center_horizontal|bottom"
        android:lineSpacingExtra="1px"
        android:paddingBottom="2dp"
        app:marqueeview_repet_type="repet_interval"
        app:marqueeview_text_color="#fff"
        app:marqueeview_text_distance="100"
        app:marqueeview_text_size="11"
        app:marqueeview_text_speed="0.4"

        />


</LinearLayout>